package {		import flash.display.MovieClip;	import flash.external.ExternalInterface;	import flash.media.Sound;	import flash.media.SoundChannel;	import flash.system.Security;		public class LyricsWithBookmarks extends MovieClip 	{		var song:Sound = new Song();		var channel:SoundChannel = new SoundChannel();		var counter:int = 0;				public function LyricsWithBookmarks()		{					// comment after testing locally				Security.allowDomain('http://localhost');						ExternalInterface.addCallback("flashPlay", myPlay);				ExternalInterface.addCallback("flashPause", myPause);				ExternalInterface.addCallback("flashPosition", getPosition);												ExternalInterface.call("flashReady");		}				function myPlay()	{ 			channel = song.play(counter);		}		function myPause() { 			this.counter = channel.position;				channel.stop(); 		}		function getPosition() {			var t:int = channel.position;			t = t/1000;			Math.floor(t);			t = t*1000;			return t;		}	}}